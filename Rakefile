begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "cucumber-hash-tags"
    gem.summary = %Q{Adds hash tags to cucumber by monkey patching}
    gem.description = %Q{Adds hash tags to cucumber by monkey patching}
    gem.email = "kmandrup@gmail.com"
    gem.homepage = "http://github.com/kristianmandrup/cucumber-hash-tags"
    gem.authors = ["Kristian Mandrup"]
    gem.add_development_dependency "rspec", ">= 2.0.0.beta.19"
    gem.add_dependency "cucumber", ">= 0.8.4"
    gem.add_dependency "gherkin", ">= 2.1.4"

    # gem is a Gem::Specification... see http://www.rubygems.org/read/chapter/20 for additional settings
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: gem install jeweler"
end

